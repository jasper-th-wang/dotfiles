(defvar
      tap-time 100
      hold-time 200
      mw-initial-v 3
      mw-maximum-v 1200
      mw-accel 1.15
      mw-decel 0.93
)

(defalias
      symg (tap-hold-release $tap-time $hold-time g (layer-toggle symbols))
      symh (tap-hold-release $tap-time $hold-time h (layer-toggle symbols))
      num (tap-hold-release $tap-time $hold-time spc (layer-toggle numbers))
      navz (tap-hold-release $tap-time $hold-time z (layer-toggle navigation))
      law (macro - S-.)
      ltaw (macro = S-.)
      ms↑ (movemouse-up 1 1)
      ms← (movemouse-left 1 1)
      ms↓ (movemouse-down 1 1)
      ms→ (movemouse-right 1 1)
      ma↑ (movemouse-accel-up 1 1000 1 5)
      ma← (movemouse-accel-left 1 1000 1 5)
      ma↓ (movemouse-accel-down 1 1000 1 5)
      ma→ (movemouse-accel-right 1 1000 1 5)
      fst (movemouse-speed 200)
      slw (movemouse-speed 50)
      mwu (mwheel-up 50 5)
      mwd (mwheel-down 50 5)
)

